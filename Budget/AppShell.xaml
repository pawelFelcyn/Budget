<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Budget.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Budget.Views"
    xmlns:local="clr-namespace:Budget"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="True">


  <FlyoutItem>
    <ShellContent
      Icon="{FontImageSource FontFamily='FA-S', Glyph='&#xf015;'}"
      Title="Overview"
      ContentTemplate="{DataTemplate views:OverviewPage}"
      Route="Overview" />
    <ShellContent
    Icon="{FontImageSource FontFamily='FA-S', Glyph='&#xf03a;'}"
    Title="History"
    ContentTemplate="{DataTemplate views:HistoryPage}"
    Route="History" />
    <ShellContent
      Icon="{FontImageSource FontFamily='FA-S', Glyph='&#xf02b;'}"
   Title="Categories"
   ContentTemplate="{DataTemplate views:CategoriesPage}"
   Route="Categories" />
  </FlyoutItem>
    

</Shell>
